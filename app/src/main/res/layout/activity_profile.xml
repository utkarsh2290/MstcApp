<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.profileActivity">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="PROFILE"
        android:textColor="@color/black"
        android:textSize="28dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:id="@+id/rLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textView9"
        android:visibility="invisible">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profilePicture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            app:civ_border_width="4dp"
            app:civ_shadow_radius="2dp"
            app:civ_shadow="true"
            app:civ_shadow_color="@color/black"
            android:src="@drawable/sample_image_fill" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/userName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_text"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:padding="10dp"
            android:text="STC Member"
            android:textColor="#332CAB"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profilePicture"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:hint="Anonymous Anonymous"
            android:inputType="textPersonName"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/userRegNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:hint="12BIT2020"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/domain_user"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:hint="stcuser1234@gmail.com"
            android:textSize="18dp"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:background="@drawable/btn_rounded"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/montserrat_medium"
            android:text="Log out"
            android:textSize="18dp"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/phone_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userRegNo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:textSize="18dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:hint="94313xxx67"
            android:inputType="phone" />

        <EditText
            android:id="@+id/room_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_user"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:textSize="18dp"
            android:hint="P-456"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/domain_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/room_user"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:textSize="18dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:hint="Management" />

    </RelativeLayout>

</RelativeLayout>