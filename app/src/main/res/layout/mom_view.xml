<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp"
    app:cardUseCompatPadding="true"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/mom_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bg_date"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/mom_image"
            android:layout_marginTop="10dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:text="44"
            android:textSize="24dp"
            android:fontFamily="@font/montserrat_semibold"
            android:id="@+id/mom_date_num"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MMM"
            android:textSize="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_below="@+id/mom_date_num"
            android:fontFamily="@font/montserrat_semibold"
            android:id="@+id/mom_month"
            android:textColor="@color/white"/>


        <TextView
            android:id="@+id/mom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/mom_image"
            android:fontFamily="@font/montserrat"
            android:text="Title of MOM"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mom_image"
            android:layout_marginTop="8dp"
            android:id="@+id/mom_content"
            android:fontFamily="@font/montserrat"
            android:textSize="16dp"
            android:text="Sample"
            android:textColor="@color/black"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>